# Copy this file to .env and set secure values before running

# MariaDB / MySQL root password used by docker image on init
MYSQL_ROOT_PASSWORD=root_password_change_me

# Application Database (used by PHP app)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=video_store
DB_USER=video_user
DB_PASSWORD=video_pass_change_me

# (Optional) If some tooling expects DB_ROOT_PASSWORD variable
DB_ROOT_PASSWORD=root_password_change_me

# DMM API keys (do NOT commit real keys)
# Get your API credentials from: https://affiliate.dmm.com/
DMM_API_ID=your_dmm_api_id_here
DMM_AFFILIATE_ID=your_dmm_affiliate_id_here
DMM_API_ENDPOINT=https://api.dmm.com/affiliate/v3/ItemList

# Admin token for admin endpoints (choose a long random string)
ADMIN_TOKEN=change_this_admin_token

# Application settings
APP_ENV=development
APP_DEBUG=true
TIMEZONE=Asia/Tokyo
CORS_ALLOWED_ORIGIN=*